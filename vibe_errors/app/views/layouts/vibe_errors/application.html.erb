<!DOCTYPE html>
<html>
<head>
  <title>VibeErrors - Error Tracking</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "vibe_errors/application", media: "all" %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to "VibeErrors", vibe_errors.root_path, class: "navbar-brand" %>
      
      <div class="navbar-nav me-auto">
        <%= link_to "Dashboard", vibe_errors.root_path, class: "nav-link" %>
        <%= link_to "Errors", vibe_errors.errors_path, class: "nav-link" %>
        <%= link_to "Messages", vibe_errors.messages_path, class: "nav-link" %>
        <%= link_to "Tags", vibe_errors.tags_path, class: "nav-link" %>
        <%= link_to "Search", vibe_errors.search_path, class: "nav-link" %>
      </div>
      
      <div class="navbar-nav">
        <%= form_with url: vibe_errors.search_path, method: :get, local: true, class: "d-flex" do |form| %>
          <%= form.text_field :q, placeholder: "Search...", class: "form-control me-2", style: "width: 200px;" %>
          <%= form.submit "Search", class: "btn btn-outline-light" %>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <%= yield %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
